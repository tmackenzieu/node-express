<%- include("template/cabecera", {titulo: 'Crear nueva mascota'}) %>
<div class="container">
  <h1>Crear mascota</h1>
  <form action="/mascotas" method="POST">
    <input
      type="text"
      placeholder="Agregar Nombre"
      class="form-control my-2"
      name="nombre"
    />
    <input
      type="text"
      placeholder="Agregar Tipo"
      class="form-control my-2"
      name="tipo"
    />
    <button class="btn btn-success btn-block" type="submit">Agregar</button>
  </form>
</div>
